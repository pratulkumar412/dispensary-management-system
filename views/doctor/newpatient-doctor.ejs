</head>

<body>

<div class="vertical-nav bg-white" id="sidebar" style="width: 300px;">
     <div class="py-4 px-3 mb-4 bg-light">
      <div class="media d-flex align-items-center"><img src="data:image/png;base64," alt="..." width="100" class="mr-3 rounded-circle img-thumbnail shadow-sm">
        <div class="media-body">
          <h4 class="m-0"><a href="/doctor/loggedin">Dr. <%= name %> </a></h4>
          <p class="font-weight-light text-muted mb-0">Welcome!</p>
        </div>
      </div>
    </div>
  
    <br><br>
    <ul class="nav flex-column bg-white mb-0">
      <li class="nav-item">
        <a href="/newpatient-doctor" class="nav-link text-dark font-italic bg-light">
                  <i class="fa fa-th-large mr-3 text-primary fa-fw"></i>
                  New patient
              </a>
      </li>
      <li class="nav-item">
        <a href="/medicines-available" class="nav-link text-dark font-italic">
                  <i class="fa fa-address-card mr-3 text-primary fa-fw"></i>
                  Medicines available
              </a>
      </li>
      <li class="nav-item">
        <a href="/patient-history" class="nav-link text-dark font-italic">
                  <i class="fa fa-cubes mr-3 text-primary fa-fw"></i>
                  Patient history
              </a>
       </li>
       <li class="nav-item">
        <a href="/logout-doctor" class="nav-link text-dark font-italic">
                  <i class="fa fa-cubes mr-3 text-primary fa-fw"></i>
                  LogOut
              </a>
       </li>
    </ul>

  </div>


    <div class="page-content p-5" id="content">
        <!-- <h1 style="text-align: center;">New patient</h1> -->

        <div class="container" style="margin-left: 100px; margin-right: 300px;">    
            
          <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info" style="height: 560px;">
                  <div class="panel-heading">
                      <div class="panel-title" style="font-size: 30px; margin-left: 35%;">New Patient (<%=patientCount%>)</div>
                  </div>  
                  <div class="panel-body" >
                      <form name="myform" method="POST" action="/newpatient-doctor">
                          <input type='hidden' name='csrfmiddlewaretoken' value='XFe2rTYl9WOpV8U6X5CfbIuOZOELJ97S' />
                                  
      
                          <form action="" class="form-horizontal" method="" >
                             
                              <div id="div_id_username" class="form-group required">
                                  <label for="id_username" class="control-label col-md-4  requiredField"> Patient's name<span class="asteriskField">*</span> </label>
                                  <div class="controls col-md-8 ">
                                      <input class="input-md  textinput textInput form-control" id="name" maxlength="30" name="name" placeholder="" style="margin-bottom: 10px" type="text" />
                                  </div>
                              </div>
                              <div id="div_id_email" class="form-group required">
                                  <label for="id_email" class="control-label col-md-4  requiredField"> Registration no.<span class="asteriskField">*</span> </label>
                                  <div class="controls col-md-8 ">
                                      <input class="input-md emailinput form-control" id="roll_no" name="roll_no" placeholder="" style="margin-bottom: 10px" type="text" />
                                  </div>     
                              </div>
                              <div id="div_id_name" class="form-group required"> 
                                  <label for="id_name" class="control-label col-md-4  requiredField"> Age<span class="">*</span> </label> 
                                  <div class="controls col-md-8 "> 
                                      <input class="input-md textinput textInput form-control" id="age" name="age" placeholder="" style="margin-bottom: 10px" type="number" />
                                  </div>
                              </div>
                              <div id="div_id_gender" class="form-group required">
                                  <label for="gender"  class="control-label col-md-4  requiredField"> Gender<span class="asteriskField">*</span> </label>
                                  <div class="controls col-md-8 "  style="margin-bottom: 10px">
                                       <label class="radio-inline"> <input type="radio" name="gender" id="id_gender_1" value="male"  style="margin-bottom: 10px">Male</label>
                                       <label class="radio-inline"> <input type="radio" name="gender" id="id_gender_2" value="female"  style="margin-bottom: 10px">Female </label>
                                  </div>
                              </div>
                              <div id="div_id_company" class="form-group required"> 
                                  <label for="id_company" class="control-label col-md-4  requiredField"> Address<span class="asteriskField">*</span> </label>
                                  <div class="controls col-md-8 "> 
                                       <input class="input-md textinput textInput form-control" id="address" name="address" placeholder="" style="margin-bottom: 10px" type="text" />
                                  </div>
                              </div> 
                              <div id="div_id_company" class="form-group required"> 
                                <label for="id_company" class="control-label col-md-4  requiredField" style="margin-top: 20px;"> Disease/Suffering form<span class="asteriskField">*</span> </label>
                                <div class="controls col-md-8 "> 
                                  <textarea id="symptom" name="symptom" class="form-control" rows="4" id="comment" style="margin-left: 00px; width: 300px;"></textarea>
                                </div>
                            </div> 
                                                  
                              <div class="form-group"> 
                                <div class="aab controls col-md-4 "></div>
                                <div class="controls col-md-8 ">
                                     <input id="btnsubmit" type="submit" onclick="return Validate()" value="submit" class="btn btn-primary" style="margin-top: 80px; height: 40px; width: 80px;">
                                </div>
                              </div>
                          </form>
      
                      </form>
                      <script type="text/javascript">
                        function Validate() {
                          
                            var name = document.forms["myform"]["name"].value;
                            var roll_no = document.forms["myform"]["roll_no"].value;
                            var age = document.forms["myform"]["age"].value;
                            var gender = document.forms["myform"]["gender"].value;
                            var address = document.forms["myform"]["address"].value;
                            var symptom = document.forms["myform"]["symptom"].value;
                           
                            if(name.length==0 || roll_no.length==0 || age<=0 || gender.length==0 || address.length==0 || symptom.length==0)
                            {
                                alert("Invalid entry!");
                                return false;
                            }
                            else
                              return true;
                        }
                    </script>
                  </div>
              </div>
          </div> 
      </div>
          
      </div>            

    </div>

    

</body>

</html>
